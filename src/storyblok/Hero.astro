---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;

---

<!-- component -->
<div class="flex flex-wrap md items-center h-screen">
    <div class="bg-white w-full md:w-1/2 h-screen">
      <div class="mx-32">
        <h1 class="text-6xl font-bold mt-16">{blok.city}</h1>

        <!-- country region island -->
        <div class="flex mt-16 font-light text-gray-500">
          <div class="pr-4">
            <span class="uppercase">Country</span>
            <p class="text-2xl text-gray-900 font-semibold pt-2">{blok.country}</p>
          </div>
          <div class="pr-4">
            <span class="uppercase">Region</span>
            <p class="text-2xl text-gray-900 font-semibold pt-2">{blok.region}</p>
          </div>
          <div class="pr-4">
            <span class="uppercase">island</span>
            <p class="text-2xl text-gray-900 font-semibold pt-2">{blok.island}</p>
          </div>
        </div>

        <!-- description -->
        <div
          class="description w-full sm: md:w-2/3 mt-16 text-gray-500 text-sm"
        >
           {blok.description}
        </div>

        <button type="button" class="mt-5 text-white bg-gray-800 hover:bg-gray-600 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">More info</button>
      </div>
    </div>
    <div class="bg-red-600 w-full md:w-1/2 h-screen">
        <img
        src={blok.image?.filename}
        class="h-screen w-full"
        alt=""
      />
    </div>
  </div>


